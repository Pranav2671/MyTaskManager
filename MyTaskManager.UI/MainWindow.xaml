<Window x:Class="MyTaskManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyTaskManager" Height="400" Width="600">

    <DockPanel>

        <!-- Top Navigation -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray" Height="40">
            <Button Content="View Tasks" Width="100" Margin="5" Click="ViewTasks_Click"/>
            <Button Content="Add Task" Width="100" Margin="5" Click="AddTask_Click"/>
        </StackPanel>

        <!-- Main content area where views will load -->
        <ContentControl x:Name="MainContent"/>

    </DockPanel>
</Window>
