<Window x:Class="MyTaskManager.UI.Views.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Border CornerRadius="10"
            Padding="15"
            Margin="10"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1">

        <StackPanel Width="300">

            <TextBlock Text="Edit Task"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Status:"/>
            <ComboBox x:Name="StatusComboBox"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="Incomplete"/>
                <ComboBoxItem Content="Doing"/>
                <ComboBoxItem Content="Done"/>
                <ComboBoxItem Content="Abandoned"/>
            </ComboBox>

            <TextBlock Text="Due Date (optional):"/>
            <DatePicker x:Name="DueDatePicker"
                        Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Save"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#2D89EF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SaveButton_Click"/>

                <Button Content="Cancel"
                        Width="100"
                        Height="30"
                        Background="#E5E5E5"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
